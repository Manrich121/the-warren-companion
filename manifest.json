{
  "manifest_version": 3,
  "name": "The Warren Companion",
  "version": "1.2.1",
  "description": "Adds functionality to theWarren.co.za",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://thewarren.co.za/*"],
      "js": ["scripts/content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
